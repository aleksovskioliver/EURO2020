@model IEnumerable<EURO2020.Models.Team>

@{
    ViewBag.Title = "Teams";
}

<h2>List of all teams</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="teamsTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <img style="width:50px;height:30px;position:center" src="@item.ImgURL" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.id },new { @class = "form-control"})
                    }

                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "form-control" })
                    @if (User.IsInRole("Administrator"))
                    {
                        <button data-team-id="@item.id" class="form-control js-delete">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
    </table>

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#teamsTable").DataTable();
            $("#teamsTable .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Do you want to delete this team?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Teams1/" + button.attr("data-team-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function (err) {
                                console.log(err);
                            }
                        });
                    }
                });
            });
        });
    </script>
    }
